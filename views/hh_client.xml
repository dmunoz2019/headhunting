<odoo>
    <data>
        <!-- Vista Formulario -->
        <record id="view_headhunting_client_form" model="ir.ui.view">
            <field name="name">headhunting.client.form</field>
            <field name="model">headhunting.client</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <notebook>
                            <!-- Pestaña General -->
                            <page string="General">
                                <group>
                                    <field name="name" />
                                    <field name="phone" />
                                    <field name="email" />
                                    <!-- Agrega más campos aquí -->
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista Lista -->
        <record id="view_headhunting_client_tree" model="ir.ui.view">
            <field name="name">headhunting.client.tree</field>
            <field name="model">headhunting.client</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name" />
                    <field name="phone" />
                    <field name="email" />
                    <!-- Agrega más columnas aquí -->
                </tree>
            </field>
        </record>

        <!-- Vista Kanban -->
        <record id="view_headhunting_client_kanban" model="ir.ui.view">
            <field name="name">headhunting.client.kanban</field>
            <field name="model">headhunting.client</field>
            <field name="type">kanban</field>
            <field name="arch" type="xml">
                <kanban>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_primary">
                                    <field name="name" />
                                </div>
                                <div class="oe_kanban_secondary">
                                    <field name="phone" />
                                    <field name="email" />
                                    <!-- Agrega más campos aquí -->
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vista Cohorte -->
        <!-- Define la vista de cohorte según tus necesidades -->

        <!-- Vista Calendario -->
        <!-- Define la vista de calendario según tus necesidades -->

        <!-- Vista Actividad -->
        <!-- Define la vista de actividad según tus necesidades -->
    </data>
</odoo>
